<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/name1"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Crazy Eggs"
        android:textSize="23dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="11dp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/started1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="started by Benedicted"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/minutes1"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:text="3 min read"/>

    <TextView
        android:id="@+id/genre1"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:text="#thriller"
        android:textSize="17dp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/time1"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="19dp"
        android:text="now"/>

    <TextView
        android:id="@+id/comment1"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:text="The latest snippet is contributed by Sallybean"/>

    <TextView
        android:id="@+id/story1"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:text="Greyhound divisely hello coldly wonderfully had marginally far upon excluding could be true but no great yet maybe so mych has gone frivolous..."
        android:textSize="21dp"
        android:layout_marginLeft="10dp"/>
</RelativeLayout>
