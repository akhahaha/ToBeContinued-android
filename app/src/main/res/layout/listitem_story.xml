<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/time1"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="19dp"
        android:text="now"/>


    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crazy Eggs"
        android:textSize="23dp"
        android:textColor="@color/colorAccent"
        android:layout_alignBaseline="@+id/time1"
        android:layout_alignBottom="@+id/time1"
        android:layout_alignLeft="@+id/story1"
        android:layout_alignStart="@+id/story1" />

    <TextView
        android:id="@+id/owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="owner"
        android:textSize="17dp"
        android:layout_below="@+id/name1"
        android:layout_above="@+id/story1" />

    <TextView
        android:id="@+id/story1"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:text="Greyhound divisely hello coldly wonderfully had marginally far upon excluding could be true but no great yet maybe so mych has gone frivolous..."
        android:textSize="21dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/time1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
